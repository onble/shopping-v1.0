<!--pages/category/index.wxml-->
<view class="cates">
  <!-- 搜索框开始 -->
  <SearchBar></SearchBar>
  <!-- 搜索框结束 -->

  <!-- 内容区开始 -->
  <view class="cates_container">
        <!-- 左侧菜单 开始 -->
        <scroll-view class="left_menu" scroll-y>
        <view>{{leftMenuList.length}}</view>
          <view class="menu_item"
                wx:for="{{leftMenuList}}"
                wx:key="*this">
            {{item}}
          </view>
        </scroll-view>
        <!-- 左侧菜单 结束 -->
        
         <!-- 右侧商品数据 开始 -->
         <scroll-view class="right_container" scroll-y>
          <view class="productType"
            wx:for="{{rightContent}}"
            wx:for-item="productType"
            wx:key="*this" 
            >
            <view class="productType_title">
              {{productType.name}}
              <view class="product_list">
                <navigator
                  wx:for="{{productType.productList}}"
                  wx:for-item="product"
                  wx:key="id"
                  >
                  <image src="{{baseUrl+'/image/product/'+product.proPic}}" mode="widthFix"/>
                  <view class="product_name">{{product.name}}</view>
                  <view class="product_price"> ¥ {{product.price}}</view>
                  </navigator>
              </view>
            </view>

            </view>
        </scroll-view>
        <!-- 右侧商品数据 结束 -->
    </view>
      <!-- 内容区结束 -->
</view>
